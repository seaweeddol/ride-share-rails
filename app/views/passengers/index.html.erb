<h1>Passengers List</h1>
<%= link_to "Add Passenger", new_passenger_path, class: "btn btn-primary" %>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Phone Number</th>
        </tr>
    </thead>
    <tbody>
        <% @passengers.each do |passenger|  %>
        <tr>
            <td><%= passenger.id %></td>
            <td><%= link_to passenger.name, passenger_path(passenger) %></td>
            <td><%= passenger.phone_number %></td>
        </tr>
        <% end %>
    </tbody>
</table>