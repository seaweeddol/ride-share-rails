<% if @passenger.errors.any? %>
<ul class="errors">
    <% @passenger.errors.each do |column, message| %>
    <li>
        <strong><%= column.capitalize %></strong> <%= message %>
    </li>
    <% end %>
</ul>
<% end %>


<%= form_with model: @passenger do |f| %>
<div>
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>

<div>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
</div>

<div>
    <%= f.submit action_name, class: "btn btn-primary" %>
</div>
<% end %>