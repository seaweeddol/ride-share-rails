<% # card styling from [source here]%>
<div class="col-lg-4 col-md-6 mb-md-0 mb-4">
    <div class="card testimonial-card">
        <div class="card-up blue"></div>
        <div class="avatar mx-auto white">
            <img src="https://raw.githubusercontent.com/seaweeddol/ride-share-rails/master/app/assets/images/profile_img.jpeg" class="rounded-circle img-fluid">
        </div>
        <div class="card-body">

            <h4 class="font-weight-bold mb-4"> <%= @passenger.name %></h4>

            <p><strong>Phone Number</strong>: <%= @passenger.phone_number %></p>
            <p><strong>Average Rating</strong>: <%= @passenger.average_rating %></p>
            <p><strong>Total Spent</strong>: $<%= @passenger.total_spent %> </p>

            <p>
                <%= link_to "Add a Trip", passenger_trips_path(@passenger.id), method: :post, class: "btn btn-primary" %> |
                <%= link_to "Edit", edit_passenger_path(@passenger.id), class: "btn btn-primary"%> |
                <%= link_to "Delete", passenger_path(@passenger), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary" %>â€©
            </p>

        </div>
    </div>
</div>

<%= render partial: "./shared/trips", locals: { user_type: @passenger } %>